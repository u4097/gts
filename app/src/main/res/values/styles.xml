<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryDark">#1578c3</item>
        <item name="colorAccent">@color/azure</item>
        <item name="android:textColorSecondary">@color/azure</item>
    </style>

    <style name="NoActionBar" parent="MainTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AzureButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/azure_button_background</item>
    </style>

    <style name="WhiteButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azure</item>
        <item name="android:background">@drawable/white_button_background</item>
    </style>

    <style name="StrawberryButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/strawberry_button_background</item>
    </style>

    <style name="Gts.TextView.Badge" parent="Base.Theme.AppCompat">
        <item name="android:layout_width">@dimen/size_icon_large</item>
        <item name="android:layout_height">@dimen/size_icon_large</item>
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:elevation" tools:targetApi="lollipop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_selector</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>


    <style name="Theme.Transparent" parent="NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black80</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/azure</item>
        <item name="android:textColorSecondary">@color/azure</item>
    </style>

