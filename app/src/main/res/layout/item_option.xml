<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="4dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageOptionChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/ic_baseline_radio_button_unchecked_24px"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textOptionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageOptionChecked"
        android:layout_toRightOf="@+id/imageOptionChecked"
        android:gravity="center_vertical|start"
        android:padding="4dp"
        android:textColor="@color/black_three"
        android:textSize="14sp"/>

</RelativeLayout>