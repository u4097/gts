<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="@dimen/medium_distance">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/groupSkuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:textColor="@color/black_three"
        tools:text="Жевательные резинки и конфеты" />



    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/layout_show_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupSkuName"
        app:el_duration="300"
        app:el_expanded="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_basket"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </net.cachapa.expandablelayout.ExpandableLayout>




</RelativeLayout>
</android.support.v7.widget.CardView>